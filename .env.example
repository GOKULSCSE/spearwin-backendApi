# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/spearwin_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# Server Configuration
PORT=5000

# Google OAuth Configuration (for Google Sign-In)
# Note: These should be configured in the frontend (.env.local), not here
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (SMTP)
# Choose one of the following email configurations:

# Option 1: SMTP (Gmail/Outlook)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=Spearwin
MAIL_SECURE=false

# Option 2: Microsoft Graph API
# GRAPH_TENANT_ID=your-tenant-id
# GRAPH_CLIENT_ID=your-client-id
# GRAPH_CLIENT_SECRET=your-client-secret
# GRAPH_USER_EMAIL=noreply@spearwin.com
# GRAPH_FROM_NAME=Spearwin

# Digital Ocean Spaces (File Upload)
DO_SPACES_ENDPOINT=https://spearwin.sfo3.digitaloceanspaces.com
DO_SPACES_BUCKET_NAME=spearwin
DO_SPACES_REGION=sfo3
DO_SPACES_ACCESS_KEY=your-access-key
DO_SPACES_SECRET_KEY=your-secret-key
